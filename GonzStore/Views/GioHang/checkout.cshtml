@{
    Layout = "_FrontEnd";
}
<!-- Checkout Start -->
<div class="checkout">
    <div class="container-fluid">
        <form asp-action="xacnhancheckout" asp-controller="GioHang">
            <div class="row">
                <div class="col-lg-8">
                    <div class="checkout-inner">
                        <div class="billing-address">
                            <h2>Thông tin khách hàng</h2>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Họ</label>
                                    <input class="form-control" name="ho" type="text" placeholder="First Name" value="@ViewBag.ho">
                                </div>
                                <div class="col-md-6">
                                    <label>Tên"</label>
                                    <input class="form-control" name="ten" type="text" placeholder="Last Name" value="@ViewBag.ten">
                                </div>
                                <div class="col-md-6">
                                    <label>E-mail</label>
                                    <input class="form-control" name="email" type="text" placeholder="E-mail" value="@ViewBag.email">
                                </div>
                                <div class="col-md-6">
                                    <label>Số điện thoại</label>
                                    <input class="form-control" name="sdt" maxlength="10" type="text" placeholder="Mobile No" value="@ViewBag.sdt">
                                </div>
                                <div class="col-md-12">
                                    <label>Địa chỉ</label>
                                    <input class="form-control" name="diachi" type="text" placeholder="Address" value="@ViewBag.diachi">
                                </div>
                                <div class="col-md-6">
                                    <label>Ghi chú</label>
                                    <input class="form-control" name="ghichu" type="text" placeholder="Ghi chú">
                                </div>
                                

                            </div>
                        </div>


                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="checkout-inner">
                        <div class="checkout-summary">
                            <h1>Thông tin thanh toán</h1>
                        
                            <p>Giá trị hàng hóa<span>@ViewBag.tth</span></p>
                            <input hidden name="tth" value="@ViewBag.tth">
                            <input hidden name="mggvl" value="@ViewBag.mggvl">
                            <input hidden name="mggvlcode" value="@ViewBag.mggvlcode">
                            <input hidden name="tongcong" value="@ViewBag.tongcong">
                            <p class="sub-total">Giảm giá<span>@ViewBag.mggvl</span></p>

                            <p class="ship-cost">Phí giao hàng<span>FREE</span></p>
                            <h2>Tổng cộng<span>@ViewBag.tongcong</span></h2>
                        </div>

                        <div class="checkout-payment">

                            <div class="checkout-btn">
                                <button>Đặt hàng</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
               
        </form>
    </div>
</div>
<!-- Checkout End -->